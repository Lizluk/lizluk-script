local DATA = _G.LIZLUK_CONFIG

---------------- APPLY TO CHARACTER ----------------
local function applyToCharacter(char)
    if not char then return end
    
    -- Apply Core Stats
    pcall(function()
        char:SetAttribute("MaxHealth", DATA.MaxHealth)
        char:SetAttribute("Health", DATA.Health)
        char:SetAttribute("MaxStamina", DATA.MaxStamina)
        char:SetAttribute("Stamina", DATA.Stamina)
        char:SetAttribute("MaxHunger", DATA.MaxHunger)
        char:SetAttribute("Hunger", DATA.Hunger)
    end)
    
    -- Apply Character Attributes
    local attrFolder = char:FindFirstChild("Attributes")
    if attrFolder then
        for k, v in pairs(DATA.Attributes) do
            local attr = attrFolder:FindFirstChild(k)
            if attr then
                if typeof(v) == "boolean" then
                    if attr:IsA("BoolValue") then attr.Value = v end
                else
                    if attr:IsA("NumberValue") or attr:IsA("IntValue") then 
                        attr.Value = v 
                    end
                end
            end
        end
    end
    
    -- Apply Humanoid
    local hum = char:FindFirstChildOfClass("Humanoid")
    if hum then
        hum.MaxHealth = DATA.MaxHealth
        hum.Health = math.clamp(DATA.Health, 0, DATA.MaxHealth)
    end
    
    print("âœ… ÄÃ£ apply stats cho nhÃ¢n váº­t!")
end

---------------- AUTO APPLY ----------------
player.CharacterAdded:Connect(function(c)
    task.wait(1.5)
    applyToCharacter(c)
end)

if player.Character then
    applyToCharacter(player.Character)
end

