---------------- INPUT BOX ----------------
local function inputBox(label, value, cb, y, isBoolean)
    if isBoolean then
        -- Toggle button cho boolean
        local box = Instance.new("TextButton", main)
        box.Text = label .. ": " .. tostring(value)
        box.Size = UDim2.fromScale(0.9, 0.028)
        box.Position = UDim2.fromScale(0.05, y)
        box.BackgroundColor3 = value and Color3.fromRGB(30, 80, 30) or Color3.fromRGB(80, 30, 30)
        box.TextColor3 = Color3.new(1, 1, 1)
        box.TextSize = 14
        Instance.new("UICorner", box)
        
        box.MouseButton1Click:Connect(function()
            local newVal = not value
            cb(newVal)
            value = newVal
            box.Text = label .. ": " .. tostring(newVal)
            box.BackgroundColor3 = newVal and Color3.fromRGB(30, 80, 30) or Color3.fromRGB(80, 30, 30)
        end)
    else
        -- Text box cho number
        local box = Instance.new("TextBox", main)
        box.Text = label .. ": " .. tostring(value)
        box.Size = UDim2.fromScale(0.9, 0.028)
        box.Position = UDim2.fromScale(0.05, y)
        box.BackgroundColor3 = Color3.fromRGB(20, 20, 30)
        box.TextColor3 = Color3.new(1, 1, 1)
        box.TextSize = 14
        box.ClearTextOnFocus = true
        Instance.new("UICorner", box)
        
        box.FocusLost:Connect(function(enter)
            if enter then
                local n = tonumber(box.Text)
                if n then
                    cb(n)
                    box.Text = label .. ": " .. n
                end
            end
        end)
    end
end

---------------- SECTION HEADER ----------------
local function sectionHeader(text, y)
    local header = Instance.new("TextLabel", main)
    header.Text = "â”â”â” " .. text .. " â”â”â”"
    header.Size = UDim2.fromScale(0.9, 0.03)
    header.Position = UDim2.fromScale(0.05, y)
    header.BackgroundTransparency = 1
    header.TextColor3 = Color3.fromRGB(200, 170, 255)
    header.Font = Enum.Font.GothamBold
    header.TextSize = 16
    return 0.032
end

