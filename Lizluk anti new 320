local DATA = _G.LIZLUK_CONFIG

---------------- üõ°Ô∏è STEALTH (SOLARA-COMPATIBLE) ----------------
_G.FAKE_STATS = {
    MaxHealth = DATA.Stealth.FakeMaxHealth,
    Health = DATA.Stealth.FakeMaxHealth,
    MaxStamina = DATA.Stealth.FakeMaxStamina,
    Stamina = DATA.Stealth.FakeMaxStamina,
    AutoFake = true
}

-- Check Solara support
local hasMT = pcall(function() return getrawmetatable(game) end)
local hasNC = pcall(function() return newcclosure end)
local hasCC = pcall(function() return checkcaller end)

print("üîç Solara features:")
print("- Metatable:", hasMT and "‚úÖ" or "‚ùå")
print("- newcclosure:", hasNC and "‚úÖ" or "‚ùå")
print("- checkcaller:", hasCC and "‚úÖ" or "‚ùå")

-- Lightweight stealth with extended stamina support
if hasMT and hasNC and hasCC then
    local success = pcall(function()
        local mt = getrawmetatable(game)
        local oldIndex = mt.__index
        local oldNewIndex = mt.__newindex
        
        if setreadonly then
            setreadonly(mt, false)
        elseif make_writeable then
            make_writeable(mt)
        end
        
        -- Hook __index ƒë·ªÉ fake khi query
        mt.__index = newcclosure(function(self, key)
            if not checkcaller() then
                -- Hook 1: Character's Humanoid (Health)
                local success1, isPlayerChar = pcall(function()
                    return self == player.Character or self.Parent == player.Character
                end)
                
                if success1 and isPlayerChar then
                    if key == "Health" then return _G.FAKE_STATS.Health end
                    if key == "MaxHealth" then return _G.FAKE_STATS.MaxHealth end
                end
                
                -- Hook 2: CoreAssets NumberValue/IntValue (Stamina)
                local success2, isCoreAssets = pcall(function()
                    if not player.Character then return false end
                    local coreAssets = player.Character:FindFirstChild("CoreAssets")
                    if not coreAssets then return false end
                    return self.Parent == coreAssets and (self:IsA("NumberValue") or self:IsA("IntValue"))
                end)
                
                if success2 and isCoreAssets then
                    if self.Name == "Stamina" and key == "Value" then
                        return _G.FAKE_STATS.Stamina
                    elseif self.Name == "MaxStamina" and key == "Value" then
                        return _G.FAKE_STATS.MaxStamina
                    end
                end
                
                -- Hook 3: Any stamina NumberValue/IntValue in character
                local success3, isStaminaValue = pcall(function()
                    if not player.Character then return false end
                    return self.Parent and self.Parent.Parent == player.Character and 
                           (self:IsA("NumberValue") or self:IsA("IntValue"))
                end)
                
                if success3 and isStaminaValue then
                    if self.Name == "Stamina" and key == "Value" then
                        return _G.FAKE_STATS.Stamina
                    elseif self.Name == "MaxStamina" and key == "Value" then
                        return _G.FAKE_STATS.MaxStamina
                    end
                end
            end
            
            return oldIndex(self, key)
        end)
        
        -- Hook __newindex ƒë·ªÉ ch·∫∑n khi game c·ªë g·∫Øng replicate real health
        mt.__newindex = newcclosure(function(self, key, value)
            -- Kh√¥ng can thi·ªáp v√†o internal calls
            if checkcaller() then
                return oldNewIndex(self, key, value)
            end
            
            -- Ch·∫∑n remote events c·ªë g·∫Øng set health/stamina
            local success, isHumanoid = pcall(function()
                return self:IsA("Humanoid") and self.Parent == player.Character
            end)
            
            if success and isHumanoid then
                -- Ch·∫∑n external scripts ƒë·ªçc real health
                if key == "Health" or key == "MaxHealth" then
                    -- V·∫´n cho ph√©p set (ƒë·ªÉ game ho·∫°t ƒë·ªông b√¨nh th∆∞·ªùng)
                    -- nh∆∞ng s·∫Ω b·ªã fake b·ªüi __index hook
                    return oldNewIndex(self, key, value)
                end
            end
            
            return oldNewIndex(self, key, value)
        end)
        
        if setreadonly then
            setreadonly(mt, true)
        elseif make_readonly then
            make_readonly(mt)
        end
        
        print("‚úÖ Anti-detection active (Health + Stamina + Replication)")
    end)
    
    if not success then
        warn("‚ö†Ô∏è Stealth limited")
    end
else
    warn("‚ö†Ô∏è Basic mode")
end

-- Auto-sync fake stats based on real stats percentage
task.spawn(function()
    while task.wait(0.05) do -- TƒÉng t·ªëc ƒë·ªô update l√™n ƒë·ªÉ sync nhanh h∆°n
        if not _G.FAKE_STATS.AutoFake then continue end
        
        pcall(function()
            local char = player.Character
            if not char then return end
            
            -- Sync Health (from Humanoid) - REAL TIME
            local hum = char:FindFirstChildOfClass("Humanoid")
            if hum and hum.MaxHealth > 0 then
                local realMaxHP = hum.MaxHealth
                local realHP = hum.Health
                local percentHP = realHP / realMaxHP
                
                -- T√≠nh fake health d·ª±a tr√™n % th·∫≠t
                local newFakeHealth = math.floor(_G.FAKE_STATS.MaxHealth * percentHP)
                
                -- Ch·ªâ update n·∫øu thay ƒë·ªïi ƒë√°ng k·ªÉ (tr√°nh flicker)
                if math.abs(_G.FAKE_STATS.Health - newFakeHealth) >= 1 then
                    _G.FAKE_STATS.Health = newFakeHealth
                end
            end
            
            -- Sync Stamina - T√¨m trong CoreAssets ho·∫∑c Attributes
            local realMaxStam = nil
            local realStam = nil
            
            -- ∆Øu ti√™n: T√¨m trong CoreAssets folder
            local coreAssets = char:FindFirstChild("CoreAssets")
            if coreAssets then
                local maxStamObj = coreAssets:FindFirstChild("MaxStamina")
                local stamObj = coreAssets:FindFirstChild("Stamina")
                
                if maxStamObj and (maxStamObj:IsA("NumberValue") or maxStamObj:IsA("IntValue")) then
                    realMaxStam = maxStamObj.Value
                end
                if stamObj and (stamObj:IsA("NumberValue") or stamObj:IsA("IntValue")) then
                    realStam = stamObj.Value
                end
            end
            
            -- Fallback 1: Character Attributes
            if not realMaxStam or not realStam then
                realMaxStam = char:GetAttribute("MaxStamina")
                realStam = char:GetAttribute("Stamina")
            end
            
            -- Fallback 2: Search to√†n b·ªô descendants
            if not realMaxStam or not realStam then
                for _, obj in ipairs(char:GetDescendants()) do
                    if obj:IsA("NumberValue") or obj:IsA("IntValue") then
                        if obj.Name == "MaxStamina" and not realMaxStam then
                            realMaxStam = obj.Value
                        elseif obj.Name == "Stamina" and not realStam then
                            realStam = obj.Value
                        end
                    end
                end
            end
            
            -- Calculate fake stamina based on percentage
            if realMaxStam and realStam and realMaxStam > 0 then
                local percentStam = realStam / realMaxStam
                local newFakeStam = math.floor(_G.FAKE_STATS.MaxStamina * percentStam)
                
                if math.abs(_G.FAKE_STATS.Stamina - newFakeStam) >= 1 then
                    _G.FAKE_STATS.Stamina = newFakeStam
                end
            end
        end)
    end
end)

-- CRITICAL: Force update humanoid display health cho ng∆∞·ªùi kh√°c nh√¨n th·∫•y
task.spawn(function()
    while task.wait(0.1) do
        if not _G.FAKE_STATS.AutoFake then continue end
        
        pcall(function()
            local char = player.Character
            if not char then return end
            
            local hum = char:FindFirstChildOfClass("Humanoid")
            if hum then
                -- Force DisplayDistanceType ƒë·ªÉ ƒë·∫£m b·∫£o healthbar ƒë∆∞·ª£c hi·ªÉn th·ªã
                hum.DisplayDistanceType = Enum.HumanoidDisplayDistanceType.Viewer
                hum.HealthDisplayType = Enum.HumanoidHealthDisplayType.DisplayWhenDamaged
                
                -- T√¨m v√† modify HealthDisplayDistance n·∫øu c·∫ßn
                -- (ƒë·ªÉ ƒë·∫£m b·∫£o healthbar ƒë∆∞·ª£c render cho ng∆∞·ªùi kh√°c)
            end
        end)
    end
end)

-- Visual spoof for health and stamina displays - CRITICAL FOR STEALTH
task.spawn(function()
    while task.wait(0.05) do -- Update c·ª±c nhanh ƒë·ªÉ tr√°nh b·ªã ph√°t hi·ªán
        if not _G.FAKE_STATS.AutoFake then continue end
        
        pcall(function()
            local char = player.Character
            if not char then return end
            
            -- ========================================
            -- CRITICAL: Fake healthbar m√† ng∆∞·ªùi kh√°c nh√¨n th·∫•y!
            -- ========================================
            local head = char:FindFirstChild("Head")
            if head then
                -- T√¨m BillboardGui ch·ª©a healthbar
                for _, billboard in ipairs(head:GetChildren()) do
                    if billboard:IsA("BillboardGui") then
                        -- T√¨m Frame ch·ª©a health bar
                        for _, frame in ipairs(billboard:GetDescendants()) do
                            if frame:IsA("Frame") then
                                -- Check n·∫øu ƒë√¢y l√† health bar (th∆∞·ªùng c√≥ m√†u ƒë·ªè/xanh)
                                local isHealthBar = false
                                
                                -- Method 1: Check t√™n
                                if frame.Name:lower():find("health") or 
                                   frame.Name:lower():find("hp") or
                                   frame.Parent.Name:lower():find("health") then
                                    isHealthBar = true
                                end
                                
                                -- Method 2: Check m√†u (health bar th∆∞·ªùng m√†u ƒë·ªè)
                                if frame.BackgroundColor3 == Color3.fromRGB(255, 0, 0) or
                                   frame.BackgroundColor3 == Color3.fromRGB(170, 0, 0) or
                                   (frame.BackgroundColor3.R > 0.6 and frame.BackgroundColor3.G < 0.3 and frame.BackgroundColor3.B < 0.3) then
                                    isHealthBar = true
                                end
                                
                                -- Update health bar size d·ª±a tr√™n fake %
                                if isHealthBar then
                                    local fakePercent = _G.FAKE_STATS.Health / _G.FAKE_STATS.MaxHealth
                                    
                                    -- Ki·ªÉm tra xem bar d√πng Scale hay Offset
                                    if frame.Size.X.Scale > 0 then
                                        -- D√πng Scale (0-1)
                                        frame.Size = UDim2.new(fakePercent, frame.Size.X.Offset, frame.Size.Y.Scale, frame.Size.Y.Offset)
                                    else
                                        -- D√πng Offset (pixel) - c·∫ßn t√¨m parent width
                                        local parent = frame.Parent
                                        if parent and parent:IsA("Frame") then
                                            local maxWidth = parent.AbsoluteSize.X
                                            frame.Size = UDim2.new(0, maxWidth * fakePercent, frame.Size.Y.Scale, frame.Size.Y.Offset)
                                        end
                                    end
                                end
                            end
                            
                            -- Fake text label hi·ªÉn th·ªã s·ªë HP
                            if frame:IsA("TextLabel") or frame:IsA("TextBox") then
                                local text = frame.Text
                                -- Pattern: "123 / 456" ho·∫∑c "123/456"
                                if string.match(text, "%d+%s*/%s*%d+") then
                                    frame.Text = _G.FAKE_STATS.Health .. " / " .. _G.FAKE_STATS.MaxHealth
                                end
                            end
                        end
                    end
                end
                
                -- Fake text tr√™n head (n·∫øu c√≥)
                for _, obj in ipairs(head:GetDescendants()) do
                    if (obj:IsA("TextLabel") or obj:IsA("TextBox")) and obj.Text then
                        if string.match(obj.Text, "%d+%s*/%s*%d+") then
                            obj.Text = _G.FAKE_STATS.Health .. " / " .. _G.FAKE_STATS.MaxHealth
                        end
                    end
                end
            end
            
            -- ========================================
            -- Fake stamina bar trong PlayerGui
            -- ========================================
            local gui = player:FindFirstChild("PlayerGui")
            if gui then
                for _, obj in ipairs(gui:GetDescendants()) do
                    -- Fake stamina text
                    if (obj:IsA("TextLabel") or obj:IsA("TextBox")) and obj.Text then
                        local name = obj.Name:lower()
                        local parentName = obj.Parent and obj.Parent.Name:lower() or ""
                        
                        if (name:find("stamina") or parentName:find("stamina")) and 
                           string.match(obj.Text, "%d+%s*/%s*%d+") then
                            obj.Text = _G.FAKE_STATS.Stamina .. " / " .. _G.FAKE_STATS.MaxStamina
                        end
                    end
                    
                    -- Fake stamina bar
                    if obj:IsA("Frame") then
                        local name = obj.Name:lower()
                        local parentName = obj.Parent and obj.Parent.Name:lower() or ""
                        
                        if name:find("stamina") or parentName:find("stamina") then
                            local fakePercent = _G.FAKE_STATS.Stamina / _G.FAKE_STATS.MaxStamina
                            
                            if obj.Size.X.Scale > 0 then
                                obj.Size = UDim2.new(fakePercent, obj.Size.X.Offset, obj.Size.Y.Scale, obj.Size.Y.Offset)
                            end
                        end
                    end
                end
            end
        end)
    end
end)

